<% layout('/layouts/boilerplate') %>

    <body>
        <br>
        <h3>All Listings</h3>
        <br>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(let listing of allListings){ %>
                <a href="/listings/<%=listing._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image %>" class="card-img-top mb-2" alt="listing_img" style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b><br>
                                <%let cost = listing.price;%>
                                <%if(!cost || isNaN(cost)){%>
                                    &#8377; <%=cost%>
                                <%} else { %>
                                    &#8377; <%= cost.toLocaleString("en-IN") %>
                                <%}%>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>

